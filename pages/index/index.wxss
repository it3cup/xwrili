.content {
  margin: 10px;
}

.title {
  display: flex;
  flex-direction: row;
}

.title .left {
  color: red;
  font-weight: bold;
  font-size: 20px;
  width: 50%;
}

.title .right {
  margin-top: 8px;
  text-align: right;
  color: #777665;
  font-size: 12px;
  width: 50%;
}



.items {
  margin-top: 5px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.select {
  margin-top: 5px;
  color: white;
  width: 14%;
  border: 1px solid #ccc;
  background-color: red;
  border-radius: 5px;
  text-align: center;
}

.normal {
  margin-top: 5px;
  color: black;
  width: 14%;
  text-align: center;
}

.day {
  text-align: center;
  font-size: 20px;
}

.lunar {
  text-align: center;
  font-size: 12px;
  color: #777665;
  opacity: 0.7;
}

.wTitle {
  margin-top: 5px;
  display: flex;
  flex-direction: row;
  font-size: 12px;
  color: black;
}

.wTitle view {
  text-align: center;
  width: 14%;
}

.wTitle .weekend {
  color: red;
}

.lunarInfo{
  margin-top: 25px;
  display: flex;
  flex-direction: row;
}

.lunarLeft{
  color: red;
  font-weight: bold;
  font-size: 16px;
  width: 50%;
}

.lunarRight{
  margin-top: 8;
  text-align: right;
  color: #777665;
  font-size: 12px;
  width: 50%;
}


.bottom {
  margin-top: 5px;
  display: flex;
  flex-direction: row;
}

.bottom .bl{
  width: 20%;
  height: 50px;
}

.bottom .br{
  width: 80%;
  height: 50px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.bottom .br view{
  width: 14%;
  border: 1px solid #ccc;
  text-align: center;
  margin-top: 4px;
  margin-right: 2px;
}

.bottom .bl view{
  border: 1px solid #ccc;
  border-radius: 5px;
  text-align: center;
  margin-top: 4px;
  margin-right: 2px;
}

.gray{
 color:#000;
  border: 1px solid #ccc;
  background-color: white;
  border-radius: 5px;
  font-size: small;
  font-weight: lighter;
}

.red{
  color: white;
  border: 1px solid #ccc;
  background-color: red;
  border-radius: 50px;
  font-size: small;
  font-weight: lighter;
  
}
