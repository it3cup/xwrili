.content {
  margin: 10px;
}

.title {
  display: flex;
  flex-direction: row;
}

.title .left {
  color: red;
  font-weight: bold;
  font-size: 20px;
  width: 70%;
}

.title .right {
  margin-top: 8px;
  text-align: right;
  color: #777665;
  font-size: 14px;
  width: 30%;
}



.items {
  margin-top: 5px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.select {
  margin-top: 5px;
  color: white;
  width: 14%;
  border: 1px solid #ccc;
  background-color: red;
  border-radius: 5px;
  text-align: center;
}

.normal {
  margin-top: 5px;
  color: black;
  width: 14%;
  text-align: center;
}

.day {
  text-align: center;
  font-size: 20px;
  font-weight: bold;
}

.normal .lunar {
  text-align: center;
  font-size: 14px;
  font-weight: lighter;
  color: #777665;
  opacity: 0.7;
}

.select .lunar {
  text-align: center;
  font-size: 14px;
  font-weight: normal;
  color:white;
  opacity: 0.7;
}
.wTitle {
  margin-top: 5px;
  display: flex;
  flex-direction: row;
  font-size: 14px;
  color: black;
}

.wTitle view {
  text-align: center;
  width: 14%;
}

.wTitle .weekend {
  color: red;
}

.lunarInfo{
  margin-top: 25px;
  display: flex;
  flex-direction: row;
}

.lunarLeft{
  color: red;
  font-weight: bold;
  font-size: 20px;
  width: 70%;
}

.lunarRight{
  margin-top: 8px;
  text-align: right;
  color: #777665;
  font-size: 14px;
  width: 30%;
}


.bottom {
  margin-top: 5px;
  display: flex;
  flex-direction: row;
}

.bottom .bl{
  width: 20%;
}

.bottom .br{
  width: 80%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.bottom .br view{
  height: 30px;
  width: 14%;
  border: 1px solid #ccc;
  text-align: center;
  margin-top: 4px;
  margin-right: 2px;
  padding-top: 10px;
}

.bottom .bl view{
  height: 30px;
  border: 1px solid #ccc;
  border-radius: 5px;
  text-align: center;
  margin-top: 4px;
  margin-right: 2px;
  padding-top: 10px;
}

.gray{
 color:#000;
  border: 1px solid #ccc;
  background-color: white;
  border-radius: 5px;
  font-size: 16px;
  font-weight: lighter;
}

.red{
  color: white;
  border: 1px solid #ccc;
  background-color: red;
  border-radius: 5px;
  font-size: 16px;
  font-weight: lighter;
}

.today{
  border: 1px solid #ccc;
  border-radius: 5px;
}
