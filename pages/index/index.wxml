<view class="content">
  <view class="title">
    <view class="left">{{year}}年{{month}}月{{date}}日</view>
    <view class="right">
      <picker mode="date" value="{{nowDate}}" start="1901-01-01" end="2100-12-31" bindchange="onDateChange">
         <view>选择日期></view>
      </picker>
    </view>
  </view>
  <view class="wTitle">
    <view>一</view>
    <view>二</view>
    <view>三</view>
    <view>四</view>
    <view>五</view>
    <view class="weekend">六</view>
    <view class="weekend">日</view>
  </view>
  <view class="hr"></view>
  <view class="items">
    <view wx:for="{{dates}}" wx:key="date" class="{{item.select?'select':'normal'}}" bindtap="onDateClick" data-date="{{item.date}}">
          <view class="date">{{item.date}}</view>
          <view class="lunar">{{item.lunarDay}}</view>
    </view> 
  </view>
  

  <view class="lunarInfo">
      <view class="lunarLeft">
      农历{{lunarMonth}}{{lunarDate}}
      </view>
      <view class="lunarRight" bindtap="onFate">
      查看八字>
      </view>
  </view>
  <view class="hr"></view>
  <view class="bottom">
      <view class="bl"> 
            <block wx:for="{{['乾造', '坤造']}}" wx:key="*this">
     <view class="{{sex==index ?'red':'gray'}}" bindtap="onSexSelect" data-sex="{{index}}">{{item}}</view>
     </block>
      </view>
      <view class="br" > 
      <block wx:for="{{['子', '丑', '寅', '卯', '辰', '巳', '午', '未', '申', '酉', '戌', '亥']}}" wx:key="*this">
     <view class="{{time==index ?'red':'gray'}}" bindtap="onTimeSelect" data-time="{{index}}">{{item}}</view>
     </block>
     </view>
  </view>

  
 
</view>
